# SmartFlow Cloudflare Worker 配置示例
# 复制此文件为 wrangler.toml 并填入你的配置

name = "smartflow-trader"
main = "src/index.js"
compatibility_date = "2025-01-07"

# 环境变量
[vars]
# Telegram Bot Token (可选，用于推送通知)
TG_BOT_TOKEN = "your_telegram_bot_token"
# Telegram Chat ID (可选，用于推送通知)
TG_CHAT_ID = "your_telegram_chat_id"

# 定时任务配置
[[triggers]]
# 每小时执行一次策略分析
cron = "0 * * * *"

# KV 存储配置
[kv_namespaces]
# 用于存储交易日志和历史数据
{ binding = "TRADE_LOG", id = "your_kv_namespace_id" }

# 可选：更多KV命名空间
# { binding = "CONFIG", id = "your_config_kv_id" }
# { binding = "CACHE", id = "your_cache_kv_id" }

# 可选：路由配置
# [routes]
# { pattern = "your-domain.com/*", zone_name = "your-domain.com" }

# 可选：环境配置
# [env.production]
# [env.staging]
